extends base

block content 
  main
      .container
        .blog
          .content
            .title
              h1=blog.title
            .main-content
              each data in blog.content
               - var delimiter = data.indexOf('-');
               - var type = data.slice(0,delimiter)
               - var val = data.slice(delimiter+1) 
               case  type
                 when 'paragraph'
                   .content--el
                     p=val
                 when 'image'
                   .content--el
                     img(src=`${val}`, alt="")
                 when 'header'
                   .content--el
                     h2=val
          .end
            blockquote=`-${blog.name}`


